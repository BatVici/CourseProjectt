@model CourseProject.Models.CityViewModel
@using CourseProject.Helpers
@using CourseProject.Models

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Cities</h2>

<div class="table-actions">
    @if (LoginUserSession.Current.IsAdministrator)
    {
        @Html.ActionLink("Add New City", "EditCity", "City", null, new { @class = "btn btn-primary btn-sm" })
    }


</div>

<table class="table table-striped">

    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>

    </thead>

    <tbody>

        @foreach (CitiesViewModel city in Model.citiesList)
        {
            <tr>
                <td>@city.ID</td>
                <td>@city.Name</td>
                @if (LoginUserSession.Current.IsAdministrator)
                {
                    <td>@Html.ActionLink("Edit", "EditCity", "City", new { id = city.ID }, new { @class = "btn btn-primary btn-sm" })</td>
                    <td>@Html.ActionLink("Delete", "Delete", "City", new { id = city.ID }, new { onclick = "return confirm('Are you sure you want to delete this city?');", @class = "btn btn-danger btn-sm" })</td>
                }

            </tr>
        }

    </tbody>

</table>

